<div class="authform">
    <% categories = Category.all.collect {|category| category.name } %>
    <%= simple_form_for(@product) do |f| %>
      <%= f.error_notification %>
      <%= f.input :name %>
      <%= f.input :firmware_version %>
      <%= f.input :description %>
      <%= f.input :active %>
      <%= f.collection_select :id, categories, :id, :name %>
      <%= f.button :submit, :class => 'button right' %>
    <% end %>
</div>
