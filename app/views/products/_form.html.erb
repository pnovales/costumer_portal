<div class="authform">
    <% @categories = Category.all.collect {|category| category } %>

    <%= simple_form_for(@product) do |f| %>
      <%= f.error_notification %>
      <%= f.input :name %>
      <%= f.input :firmware_version %>
      <%= f.input :description %>
      <%= f.input :active %>
      <%= f.select(:category_id, @categories.map {|c| [c.name, c.id]}) %>
      <%= f.button :submit, :class => 'button right' %>
    <% end %>
</div>
