<div class="authform">
  <% @users = User.all.collect {|user| user } %>
  <% @products = Product.all.collect {|product| product } %>



  <%= simple_form_for(@ticket) do |f| %>
    <!--<h3>New Ticket</h3>-->
    <%= f.error_notification %>

    <!--<div class="form-inputs">-->
      <div class="form-group">
        <%= f.input :title, :autofocus => true %>
      </div>
      <div class="form-group">
        <%= f.input :description %>
      </div>
      <div class="form-group">
        <%= f.input :priority %>
      </div>
      <div class="form-group">
        <%= f.input :company %>
      </div>
      <div class="form-group">
        <%= f.input :status %>
      </div>
      <div class="form-group">
        <%= f.input :assigned_to %>
      </div>
      <div class="form-group">
        <%= f.input :contact %>
      </div>
      <div class="form-group">
        <%# f.input :user_id %>
        <%= f.select(:user_id, @users.map {|u| [u.name, u.id]}) %>
      </div>
      <div class="form-group">
        <%# f.input :product_id %>
        <%= f.select(:product_id, @products.map {|p| [p.name, p.id]}) %>
      </div>

    <!--</div>-->

    <!--<div class="form-actions">-->
      <%= f.button :submit, :class => 'button right' %>
    <!--</div>-->
  <% end %>
</div>




  


